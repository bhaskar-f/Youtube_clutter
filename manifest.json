{
  "manifest_version": 3,
  "name": "YouTube Declutter",
  "version": "5.0",
  "description": "Hide Shorts, comments, home feed, sidebar, and visible ads on YouTube.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "declarativeNetRequest"
  ],
  "host_permissions": ["*://*.youtube.com/*", "*://*.googlevideo.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["instantHide.css"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
